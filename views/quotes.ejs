<% include ./partials/_head %>

<div class="container">
      <h1>Movie Quotes</h1>

      <div class="accordion" id="quote-list">
        
        <% for (const quoteId in quoteList) { %> 

        <div class="card">
          <div class="card-header" id="headingTwo">
            <h5 class="mb-0">
              <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#<%= quoteId %>" aria-expanded="true" aria-controls="collapseTwo">
                <%= quoteList[quoteId].quote %> 
              </button>
            </h5>

            <span>
              <form method="GET" action="/quotes/<%= quoteId %>"><input type="submit" class="btn btn-secondary btn-sm" value="Edit"></form>
              <form><input type="submit" class="btn btn-secondary btn-sm" value="Delete"></form>
            </span>

          </div>
          <div id="<%= quoteId %>" class="collapse in" aria-labelledby="headingTwo" data-parent="#quote-list" aria-expanded="true" style="">
            <div class="card-body">
              <h4>Comments</h4>

              <ul class="list-group">
                
                <% for (const commentObj of quoteList[quoteId].comments) { %>

                <li class="list-group-item">
                  <%= commentObj.comment %>
                  <span>
                    <form><input type="submit" class="btn btn-secondary btn-sm" value="Edit"></form>
                      <form><input type="submit" class="btn btn-secondary btn-sm" value="Delete"></form>
                    </span>
                </li>

                <% } %>
                
                
              </ul>

              <a href="" class="btn btn-info">Add Comment</a>
            </div>
          </div>
        </div>
      <% } %>
      </div>
      <a href="" class="btn btn-primary">Add Quote</a>
    </div>
</body>

</html>